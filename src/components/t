  display: flex;
  flex-wrap: wrap;
  gap: 10px;
  justify-content: center;
  align-content: flex-start;
  width: 100%;
  height: calc(100vh - 80px); /* Keeps space for controls */
  overflow-y: auto; /* Allows scrolling if needed */
  padding: 10px;
}
